# Configuration Nginx pour Radio Occitania Pige System
# Placez ce fichier dans /etc/nginx/sites-available/ et créez un lien symbolique dans sites-enabled/

upstream pige_backend {
    server localhost:8000;
}

server {
    listen 80;
    server_name pige.radio-occitania.com;

    # Redirection vers HTTPS (décommentez après avoir configuré SSL)
    # return 301 https://$server_name$request_uri;

    client_max_body_size 500M;  # Pour les uploads de gros fichiers
    
    # Logs
    access_log /var/log/nginx/pige_access.log;
    error_log /var/log/nginx/pige_error.log;

    # Static files
    location /static/ {
        alias /var/www/pige/staticfiles/;
        expires 30d;
        add_header Cache-Control "public, immutable";
    }

    # Media files (enregistrements)
    location /media/ {
        alias /var/www/pige/recordings/;
        # Authentification basique pour protéger les fichiers
        auth_basic "Restricted Access";
        auth_basic_user_file /etc/nginx/.htpasswd;
        
        # Permettre le streaming
        add_header Cache-Control "no-cache";
        add_header X-Content-Type-Options "nosniff";
    }

    # API Django
    location / {
        proxy_pass http://pige_backend;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Timeouts pour les longues requêtes (transcription)
        proxy_connect_timeout 600s;
        proxy_send_timeout 600s;
        proxy_read_timeout 600s;
    }

    # WebSocket pour le monitoring (futur)
    location /ws/ {
        proxy_pass http://pige_backend;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
    }
}

